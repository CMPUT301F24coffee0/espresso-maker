<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SplashActivity"
    android:background="@drawable/app_background">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/app_name_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/espresso_app_name_animation" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/app_logo_anim"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_below="@+id/app_name_anim"
        android:layout_centerHorizontal="true"
        android:src="@drawable/espresso_app_logo_animation" />

</RelativeLayout>