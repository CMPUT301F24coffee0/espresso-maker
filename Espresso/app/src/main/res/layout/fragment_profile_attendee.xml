<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Attendee.AttendeeHomeActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Admin AttendeeDashboard Title -->
        <TextView
            android:id="@+id/admin_dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Profile"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/removeProfilePicButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/profilePicButton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="11dp"
            android:backgroundTint="@android:color/darker_gray"
            android:contentDescription="Remove Profile Picture"
            android:text="Remove"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/profilePicButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:contentDescription="Select Profile Picture"
            android:background="?android:attr/windowBackground"
            android:padding="0dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/initial"
            android:text="A"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:textColor="#000000"
            android:background="@drawable/circle_background"
            android:visibility="visible"/>  <!-- Optional: set the text color -->


        <TextView
            android:id="@+id/name"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="92dp"
            android:text="Name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="212dp"
            android:text="Email"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="248dp"
            android:text="Role:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="286dp"
            android:text="Phone Number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="356dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="339dp"
            android:text="Sign out"
            android:textColorLink="#00B0FD" />

        <ImageButton
            android:id="@+id/edit_profile_button"
            android:layout_width="65dp"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/white"
            android:background="@color/white"
            app:srcCompat="@drawable/settings" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
